{% extends 'base.html.twig' %}

{% block title %}TwitterLike{% endblock %}

{% block body %}
    <div class="container">
        <table class="table">
            <thead>
            <tr>
                <th>Titre du post</th>
                <th>Contenu du post</th>
                <th>Media</th>
                <th>Publié le</th>
            </tr>
            </thead>
            <tbody>
            {% for post in post %}
                <tr>
                    <td>{{ post.titre }}</td>
                    <td>{{ post.contenu}}</td>
                    <td><img src="{{ post.media }}" style="max-width: 50%" class="card-img-top" alt="..."></td>
                    <td><p class="card-text">{{ post.creation|date('d-m-Y H:i:s', "Europe/Paris") }}</p></td>
                    <td><a class="btn btn-primary mt-4 mb-4" href="{{ path('app_post_edit', {'id': post.id}) }}}">Modifier</a></td>
                    <td><a class="btn btn-primary mt-4 mb-4" href="{{ path('app_post_delete', {'id': post.id}) }}}">Supprimer</a></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">Aucune donnée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}